import groovy.transform.Field

// Use this fields for hardcoded repo and branch
@Field final String REPOSITORY = 'https://github.com/Flame0n/tensor.git'
@Field final String BRANCH = 'main'

def executeCommand(String executionType) {
    println("he-he")
    /*
    sh """
        tensorflow/tools/ci_build/ci_build.sh ROCM ./tensorflow/tools/ci_build/linux/rocm/${executionType}.sh
    """
    */
}

def checkoutProject(String repo, String branch){
    checkout(
        [
            $class: 'GitSCM',
            userRemoteConfigs: [[url: repo]],
            branches: [[name: branch]]
        ]
    )
}

String branch = ''
String repo = ''

if (env.GIT_BRANCH && env.GIT_URL) {
    branch = env.GIT_BRANCH
    repo = env.GIT_URL
} else if (REPOSITORY && BRANCH){
    branch = BRANCH
    repo = REPOSITORY
}



pipeline {
    agent {
        node { label 'rocm' }
    }
    options {
        timeout(time: 10, unit: 'HOURS')
        timestamps()
    }
    stages {
        stage("CPU") {
            steps {
                script {
                    echo "[DEBUG] ${env.GIT_BRANCH} ${env.GIT_URL}"
                    checkoutProject(env.GIT_URL, env.GIT_BRANCH)
                    executeCommand("run_cpu")
                }
            }
        }
    }
    post {
        success {
            print "SUCCESS"
        }
        failure {
            print "FAILURE"
        }
        unstable {
            print "UNSTABLE"
        }
        cleanup {
            cleanWs()
        }
    }
}